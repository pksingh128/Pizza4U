
<div class="container contact-form">
    <div class="contact-image">
        <img src="/images/avatar.svg">
    </div>
    <form method="POST" action="/contact">
        <h3>Drop Us a Message</h3>
        <span class="badge bg-warning text-danger fst-italic fs-7">{{msg}}</span>
        <div class="row">
          
            {{#iterate user}}
            <div class="col-md-6">
                <div class="form-group mt-2">
                    <input type="text" name="name" class="form-control" value="{{this.name}}" placeholder="Your Name *" >
                </div>
                <div class="form-group mt-2">
                    <input type="text" name="email" class="form-control" value="{{this.email}}"
                    placeholder="Your Email *" >
                </div>
        
                <div class="form-group mt-2">
                   
                    <input type="text" name="phone" class="form-control" value="{{this.phone}}"
                     placeholder="Your Phone Number *" >
                </div>
                    {{/iterate}}
                <div class="form-group mt-4">
                    <input type="submit" name="submit" class="btnContact" value="Send Message" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group ">
                    <textarea name="message" class="form-control" placeholder="Your Message *"
                        style="width: 100%; height: 150px;"></textarea>
                </div>
            </div>
        </div>
    </form>
</div>