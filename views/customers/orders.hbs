<section class="orders">
  <div class="container">
    <h3 class="mt-3 fw-bold">All orders</h3>
    {{#if messages.success }}
    <div id="success-alert" class="alert alert-success alert-dismissible bg-success text-white" role="alert">
      {{messages.success}}
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"><i
          class="bi bi-arrow-up-right-square-fill"></i></button>
    </div>
    {{/if}}
    <div class="table-responsive">
    <table class="table table-bordered table-hover shadow">
      <thead>
        <tr>

          <th scope="col">Orders</th>
          <th scope="col">Phone</th>
          <th scope="col">Address</th>
          <th scope="col">Time</th>
        </tr>
      </thead>
      <tbody>
        {{#if orders.length}}
        {{#iterate orders}}
        <tr>
          <th scope="row"><a class="link text-decoration-none text-danger"
              href="/customer/orders/{{this.order_id}}">{{this.order_id}}</a></th>
          <td>{{this.phone}}</td>
          <td>{{this.address}}</td>
          <td>{{this.placed_at}}</td>
        </tr>
        {{/iterate}}

        {{else}}
        <tr>
          <td>No orders founds</td>
        </tr>

        {{/if}}

      </tbody>
    </table>
    </div>

  </div>

</section>



<script src="/js/app.js" type="module"></script>
<script src="/path/to/date-and-time.min.js"></script>