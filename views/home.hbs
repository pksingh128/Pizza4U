<section class="container-md mb-5 menu">
    <div class="row justify-content-center">
        {{#each results}}
        <div class="col-sm-3 mb-5 py-3 py-sm-0">
            <div class="card h-100 shadow card-body">
                <img class="card-img-top img-fluid bg-image hover-zoom" src="images/{{this.image}}"
                    data-holder-rendered="true" style="height: 180px; width: 100%; display: block;">
                <div class="card-block text-center">
                    <h4 class="card-title">{{this.name}}</h4>
                    <span>{{this.size}}</span>
                    <div>
                        <span>{{this.price}}</span><br>
                    </div>
                    
                    <button data-pizza="{{JSONstringify this}}" type="button"
                        class="add-to-cart btn btn-outline-success mt-3 rounded-pill shadow">+ Add</button>
                  
                </div>
            </div>
        </div>
        {{/each}}





